{
  "name": "vibecode-tic-tac-toe",
  "version": "1.0.0",
  "type": "module",
  "description": "A live, two-player Tic-Tac-Toe game.",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "node scripts/check-coverage.js",
    "dev": "PORT=3001 node src/server.js",
    "start": "node src/server.js"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
